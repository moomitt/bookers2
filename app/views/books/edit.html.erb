<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error-explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |massage| %>
      <li><%= massage %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
    </div>

  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
  
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
